.work-area
  %h1 User #{current_user}

  .button-area
    = link_to "Back to Profile.", profile_path(current_user), class: 'button'

  %h2 Change Avatar

  = simple_form_for current_user, url: {action: 'update'}, html: {method: 'patch', multipart: true} do |f|

    %div
      = image_tag(current_user.avatar_url(:thumb)) if current_user.avatar
    %div
      = f.input :avatar
    %div
      = f.button :submit, 'Update Profile', class: 'btn btn-primary'

= render 'profiles/sidebar'
